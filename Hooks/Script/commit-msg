#!/bin/sh

commit_msg_file="$1"
msg=$(head -n1 "$commit_msg_file" | tr -d '\r')

echo "ğŸ” Checking commit message: $msg"

# Allow our custom prefixes or "Merge branch ..."
if ! echo "$msg" | grep -qE '^(feat|fix|update|layout|anim|assets|others):\ |^Merge branch '; then
  echo "âŒ Commit message must start with one of: feat:, fix:, update:, layout:, anim:, assets:, others: or be a merge commit"
  echo "ğŸ’¡ Example: feat: add new player combat system"
  echo "ğŸ’¡ Example: Merge branch 'feature-branch' into develop"
  exit 1
fi

echo "âœ… Commit message passed checks!"
exit 0
