#!/bin/sh

commit_msg_file="$1"
msg=$(head -n1 "$commit_msg_file" | tr -d '\r')

echo "🔍 Checking commit message: $msg"

if ! echo "$msg" | grep -qE '^(feat|fix|update|layout|anim|assets|others):\ '; then
  echo "❌ Commit message must start with one of: feat:, fix:, update:, layout:, anim:, assets:, others:"
  echo "💡 Example: feat: add new player combat system"
  exit 1
fi

echo "✅ Commit message passed checks!"
exit 0
